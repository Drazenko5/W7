@model Theater.Models.Dashboard.ViewModels.EditPlayViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>
    <form method="post" asp-controller="Play" asp-action="Edit" name="EditPlayForm" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" type="textarea" class="form-control"> </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Actors" class="control-label"></label>
            <select asp-for="Actors" class="form-control" asp-items="@ViewBag.Actors"></select>
            <span asp-validation-for="Actors" class="text-danger"></span>
        </div>
        <div class="form-group">
            @if (Model.Image != null)
            {
            <img class="card-img-top" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="@Model.Title  + image">
            }
            <label asp-for="NewImageFile" class="control-label"></label>
            <input name="NewImageFile" asp-for="NewImageFile" />
            <span asp-validation-for="NewImageFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ScheduleTime" class="control-label"></label>
            <input type="date" name="ScheduleTime" asp-for="ScheduleTime" required />
            <span asp-validation-for="ScheduleTime" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>

    </form>
</div>
